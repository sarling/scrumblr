						img#delete-col.col-icon(width='20', height='20', src='images/icons/iconic/raster/black/minus_alt_32x32.png')


	div.buttons
		i#create-card.fa.fa-plus-circle.fa-2x.bottom-icon
		i#smallify.fa.fa-expand.fa-2x.bottom-icon
		i#create-snapshot.fa.fa-camera.fa-2x.bottom-icon
		select#select-menu
		i#restore-snapshot.fa.fa-clock-o.fa-2x.bottom-icon
		i#import-snapshot.fa.fa-download.fa-2x.bottom-icon


